{
   "extends": "@vue/tsconfig/tsconfig.web.json",
   "include": [
      "env.d.ts",
      "src/**/*.ts",
      "src/**/*.vue"
   ],
   "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "lib": [
         "esnext",
         "dom"
      ],
      "baseUrl": ".",
      "paths": {
         "@/*": [
            "./src/*"
         ]
      }
   },
   "references": [
      {
         "path": "./tsconfig.config.json"
      }
   ]
}
